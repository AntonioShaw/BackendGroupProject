<!DOCTYPE html>
<html lang="en">

<head>

  {{> header}}
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
  <link rel="stylesheet" type="text/css" href="/css/detailsPage.css">
  
  

  <title>Shoe Details</title>
</head>

<body id='indexBody'>


  <div class="container">
    {{> menu}}

    <img src="/uploads/{{image}}" />
    <h3>{{name}}</h3>
    <p>{{description}}</p>
    <small>${{price}}</small>

    <!-- Add Comments -->
    <div class="add-comment">
      <h4>Comments</h4>
      <form class="form-group" method='POST' action='/product-details/{{id}}/add-comment'>
        <label for="title" class="mr-sm-2">Title:</label>
        <input type="text" class="form-control mb-2 mr-sm-2" name="title" placeholder="Enter Title">
        <label for="message" class="mr-sm-2">Message:</label>
        <input type="text" class="form-control mb-2 mr-sm-2" name="message" placeholder="Enter Message">
        <button class="btn btn-primary">Add Comment</button>
      </form>

    </div>



    <ul class="list-group">
      {{#comment}}
      <h5>{{title}}</h5>
      <strong>By: {{user.username}}</strong>
      <p>{{message}}</p>
      {{/comment}}
    </ul>


  </div>

  {{#errorMessage}}
  <div class="alert alert-danger" role="alert">
    {{errorMessage}}
  </div>
  {{/errorMessage}}


  {{> footer}}
</body>

</html>